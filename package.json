{
  "name": "investie",
  "version": "1.0.0",
  "private": true,
  "description": "Investment analysis platform with AI-powered insights",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "backend:dev": "npm run dev --workspace=apps/backend",
    "backend:build": "npm run build --workspace=apps/backend",
    "backend:start": "npm run start --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/web",
    "frontend:build": "npm run build --workspace=apps/web",
    "frontend:start": "npm run start --workspace=apps/web"
  },
  "devDependencies": {
    "@turbo/gen": "^1.12.4",
    "turbo": "^1.12.4",
    "prettier": "^3.0.0"
  },
  "packageManager": "npm@10.2.4"
}