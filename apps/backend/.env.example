# API Keys (Required)
SERPAPI_API_KEY=your-serpapi-key-here
CLAUDE_API_KEY=your-claude-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Optional API Keys for Financial Data Integration
FRED_API_KEY=your-fred-api-key-here
GOOGLE_FINANCE_API_KEY=your-finance-key-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Application Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Cache TTL Settings (in seconds)
ECONOMIC_DATA_TTL=86400    # 24 hours
STOCK_DATA_TTL=300         # 5 minutes
AI_CONTENT_TTL=43200       # 12 hours
NEWS_DATA_TTL=21600        # 6 hours
CHAT_SESSION_TTL=3600      # 1 hour

# Database (if needed in future)
DATABASE_URL=postgresql://username:password@localhost:5432/investie
